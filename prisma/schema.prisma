generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(cuid())
  email              String   @unique
  name               String?
  stripeCustomerId   String?  @unique
  subscriptionId     String?
  subscriptionStatus String   @default("free") // free, pro, canceled
  stripeAccountId    String?  // Connected Stripe account for revenue data
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  metrics            Metric[]
  metricValues       MetricValue[]
  reports            Report[]
}

model Metric {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String   // e.g., "MRR", "Churn Rate", "Customer Count"
  type        String   // currency, percentage, number
  source      String   @default("manual") // manual, stripe
  color       String   @default("#3B82F6") // Chart color
  icon        String?  // Optional icon name
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  values      MetricValue[]
  
  @@unique([userId, name])
  @@index([userId])
}

model MetricValue {
  id        String   @id @default(cuid())
  metricId  String
  metric    Metric   @relation(fields: [metricId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  value     Float
  date      DateTime @db.Date
  notes     String?
  
  createdAt DateTime @default(now())
  
  @@unique([metricId, date])
  @@index([metricId, date])
  @@index([userId])
}

model Report {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  email     String   // Recipient email
  frequency String   @default("weekly") // weekly, monthly
  dayOfWeek Int      @default(1) // 0=Sunday, 1=Monday, etc.
  enabled   Boolean  @default(true)
  lastSent  DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model StripeEvent {
  id        String   @id
  type      String
  processed Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([type, processed])
}
